<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Clockwork Flies" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Clockwork Flies" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <!-- GA code -->
    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        
        ga('create', 'UA-47821133-1', 'clockworkflies.com');
        ga('send', 'pageview');
      </script>
    <% end %>
    <!-- GA code end -->
    <div class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>
    <div id="main" role="main">
      <div>
        <div class="content">
          <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
            <div class="footer">
              <div class="container-fluid">
                <div class="pull-left">
                  Â© Clockwork Flies 2014|
                  <%= link_to 'About', about_path, :class => 'white' %>
                  |
                  <%= link_to 'Terms & Conditions', termsandconditions_path, :class => 'white' %>
                </div>
                <div class="pull-right">
                  Catch more.
                </div>
              </div>
            </div>
          </footer>
        </div>
      </div>
      <!--! end of .container -->
    </div>
    <!--! end of #main -->
  </body>
</html>
